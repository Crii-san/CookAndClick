{% set title = "Création d'une nouvelle étape pour la recette : " %}

{% extends 'base.html.twig' %}

{% block title %} {{ recette.nom }} {% endblock %}

{% block body %}

    <h1> {{ title }} {{ recette.nom }}</h1>
    {{ form_start(form) }}
    {{ form_row(form.numero) }}
    {{ form_row(form.description) }}
    {{ form_row(form.recette) }}
    {{ form_row(form.ingredients) }}
    <div class="w-100 p-3">
        <input type="submit" class="btn btn-dark" value="Ajouter" />
    </div>
    {{ form_end(form) }}

{% endblock %}

