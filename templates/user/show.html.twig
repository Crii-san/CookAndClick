{% extends 'base.html.twig' %}

{% block title %}Mon compte{% endblock %}

{% block body %}

    <div>
        <h1>
            {{ user.nom | capitalize }} {{ user.prenom | capitalize }}
            <a href="{{ path('app_user_update', {'id': user.idUser}) }}" class="material-symbols-outlined text-warning">
                edit
            </a>

            <a href="{{ path('app_user_delete', {'id': user.idUser}) }}" class="material-symbols-outlined text-danger">
                delete
            </a>
        </h1>

        <dl class="row">
            <dt class="col-sm-3">Nom</dt>
            <dd class="col-sm-9">{{ user.nom | capitalize }}</dd>

            <dt class="col-sm-3">Prénom</dt>
            <dd class="col-sm-9">{{ user.prenom | capitalize }}</dd>

            <dt class="col-sm-3">Date de naissance</dt>
            <dd class="col-sm-9">{{ user.dateNais | date('d/m/Y') }}</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">{{ user.email }}</dd>

            <dt class="col-sm-3">Téléphone</dt>
            <dd class="col-sm-9">{{ user.tel }}</dd>

            <dt class="col-sm-3">Allergène(s)</dt>
            <dd class="col-sm-9">
                {% if user.allergene is not empty %}
                    {{ user.allergene.nom }}
                {% else %}
                    Aucun
                {% endif %}
            </dd>
        </dl>
    </div>

{% endblock %}