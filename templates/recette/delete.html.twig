{% set title = recette.nom %}

{% extends 'base.html.twig' %}

{% block body %}

    <h1> Suppression de la recette : {{ title }}</h1>
    {{ form_start(form, {'attr': {'class': 'd-flex justify-content-evenly'}}) }}
    {{ form_row(form.delete, {'label': 'Supprimer', 'attr': {'class': 'btn btn-primary'}}) }}
    {{ form_row(form.cancel, {'label': 'Annuler', 'attr': {'class': 'btn btn-secondary'}}) }}
    {{ form_end(form) }}
{% endblock %}

{% block title %}
    Suppression de {{ title }}
{% endblock %}