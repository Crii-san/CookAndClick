{% set title = "Nouvelle étape pour la recette :" %}

{% extends 'base.html.twig' %}

{% block title %} {{ recette.nom }} {% endblock %}

{% block body %}
    <div style="text-align: center;">
    <h1>
        {{ title }} {{ recette.nom }}
    </h1>
        <h3>
            Votre étape a bien été créée !
        </h3>
            <p>
                Souhaitez-vous ajouter une autre étape à votre recette ?
            </p>
        <a href="{{ path('app_etape_create',{id : recette.id}) }}" class="oui btn btn-dark"> OUI </a>
        <a href="{{ path('app_recette_show',{id : recette.id}) }}" class="non btn btn-primary"> NON </a>
    </div>
{% endblock %}

